# UniNest Backend Environment Configuration for Render
# Copy this file to .env and fill in your actual values

# Server Configuration
NODE_ENV=production
PORT=10000
FRONTEND_URL=https://your-frontend-service-name.onrender.com

# Database Configuration (Render will provide this automatically)
# DATABASE_URL=postgresql://username:password@host:port/database

# JWT Configuration (REQUIRED)
JWT_SECRET=your_super_secret_jwt_key_here_make_it_long_and_random

# Stripe Configuration (OPTIONAL - remove if you don't want payments)
# STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
# STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret_here

# Cloudinary Configuration (OPTIONAL - remove if you don't want image uploads)
# CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
# CLOUDINARY_API_KEY=your_cloudinary_api_key
# CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# Email Configuration (OPTIONAL - remove if you don't want emails)
# RESEND_API_KEY=your_resend_api_key_here
# EMAIL_FROM=noreply@yourdomain.com

# Security
CORS_ORIGIN=https://your-frontend-service-name.onrender.com
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
